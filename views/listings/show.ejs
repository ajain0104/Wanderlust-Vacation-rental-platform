<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Listing Details:</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
            <img src="<%= x.image %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
              <p class="card-text">
                <b><%= x.title %></b> <br>
                <%= x.description %> <br>
                &#8377; <%= x.price.toLocaleString("en-IN") %> <br>
                <%= x.location %> <br>
                <%= x.country %>
            </p>
        </div>
    </div>
    <div class="btns mb-5">
        <a href="/listings/<%=x._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <form method="post" action="/listings/<%= x._id %>/?_method=DELETE">
        <button class="btn btn-dark offset-5">delete</button>
    </form>
    </div>
</div>
    
    